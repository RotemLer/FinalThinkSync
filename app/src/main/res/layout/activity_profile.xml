<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/profile_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/profile_LAYOUT_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:id="@+id/profile_LAYOUT_TopRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/profile_TEXT_Email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ” Logged in as:"
                    android:textSize="18sp"
                    android:textColor="@color/dark_text" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/profile_IMG_Bell"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_bell" />

                    <TextView
                        android:id="@+id/profile_TEXT_Badge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:elevation="4dp" />
                </FrameLayout>



                <Button
                    android:id="@+id/profile_BTN_Logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:backgroundTint="@color/purple300"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <TextView
                android:id="@+id/profile_TEXT_UploadedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ðŸ“¤ Uploaded Summaries"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_RV_UploadedSummaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/profile_TEXT_SavedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ðŸ’¾ Saved Summaries"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_RV_SavedSummaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/background"
        app:itemIconTint="@color/accent200"
        app:itemTextColor="@color/accent200"/>
</RelativeLayout>
