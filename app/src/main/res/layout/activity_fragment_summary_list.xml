<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FragmentSummaryListActivity"
    android:background="@color/gray_bg">

    <TextView
        android:id="@+id/summary_list_TV_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_user"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>


    <AutoCompleteTextView
        android:id="@+id/summary_list_ET_FilterCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/summary_list_TV_Welcome"
        android:hint="Choose Course"
        android:inputType="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/summary_list_RV_Summaries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/summary_list_ET_FilterCourse"
        android:layout_above="@id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@android:drawable/arrow_down_float"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/gray_bg" />

</RelativeLayout>