<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/thinksync_background"
    android:layout_marginBottom="8dp"
    android:id="@+id/item_summary_main">

    <TextView
        android:id="@+id/item_summary_TV_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary Title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/thinksync_dark_text" />

    <TextView
        android:id="@+id/item_summary_TV_Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_summary_TV_Title"
        android:layout_marginTop="4dp"
        android:text="Course Name"
        android:textColor="@color/thinksync_dark_text" />

    <TextView
        android:id="@+id/item_summary_TV_Lecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_summary_TV_Course"
        android:layout_marginTop="2dp"
        android:text="Lecturer Name"
        android:textColor="@color/thinksync_dark_text" />

    <Button
        android:id="@+id/item_summary_BTN_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_summary_TV_Lecturer"
        android:layout_marginTop="8dp"
        android:text="ðŸ’¾ Save"
        android:backgroundTint="@color/thinksync_blue"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_summary_TV_Reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/item_summary_BTN_Save"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:textColor="@color/thinksync_dark_text" />
</RelativeLayout>
